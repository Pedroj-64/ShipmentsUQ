<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1000.0" styleClass="root" stylesheets="@../css/admindashboard.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.sameday.shipmentsuqsameday.viewController.AdminDashboardViewController">
   <top>
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="70.0" spacing="10.0" styleClass="header-container">
               <children>
                  <Label fx:id="lbl_title" styleClass="header-title" text="Panel de Administración" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btn_logout" mnemonicParsing="false" styleClass="logout-button" text="Cerrar Sesión" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <left>
      <VBox prefWidth="220.0" spacing="10.0" styleClass="menu-container">
         <children>
            <Label fx:id="lbl_menuTitle" styleClass="menu-header" text="Navegación" />
            <Button fx:id="btn_users" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Usuarios" />
            <Button fx:id="btn_couriers" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Repartidores" />
            <Button fx:id="btn_shipments" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Envíos" />
            <Button fx:id="btn_metrics" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-button" text="Métricas y Reportes" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <ScrollPane fitToWidth="true" styleClass="content-scroll-pane" BorderPane.alignment="CENTER">
         <content>
            <StackPane fx:id="stk_contentArea" styleClass="content-container" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label fx:id="lbl_welcomeMessage" styleClass="welcome-message" text="Bienvenido al Panel de Administración" />
               </children>
            </StackPane>
         </content>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0" styleClass="status-container">
         <children>
            <Label fx:id="lbl_statusMessage" styleClass="status-label" text="Conectado como Administrador" />
         </children>
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>